{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Auto-Woffu configuration",
  "type": "object",
  "properties": {
    "$schema": {
      "title": "Schema file for validation",
      "type": "string",
      "format": "uri"
    },
    "company": {
      "title": "Company name",
      "type": "string",
      "minLength": 1
    },
    "email": {
      "title": "User email",
      "type": "string",
      "format": "email",
      "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Za-z0-9_'+\\-\\.]*)[A-Za-z0-9_+-]@([A-Za-z0-9][A-Za-z0-9\\-]*\\.)+[A-Za-z]{2,}$"
    },
    "password": {
      "title": "User password",
      "type": "string",
      "minLength": 1
    },
    "schedule": {
      "title": "Scheduled actions",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cron": {
            "title": "Cron expression",
            "type": "string"
          },
          "kind": {
            "title": "Check type",
            "type": "string",
            "enum": [
              "checkin-home",
              "checkin-office",
              "checkout"
            ]
          }
        },
        "required": [
          "cron",
          "kind"
        ],
        "additionalProperties": false
      }
    },
    "discordWebhook": {
      "title": "Discord webhook URL",
      "type": "string",
      "format": "uri"
    }
  },
  "required": [
    "company",
    "email",
    "password"
  ],
  "additionalProperties": false
}
